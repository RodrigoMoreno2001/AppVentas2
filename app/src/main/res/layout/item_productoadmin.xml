<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Imagen a la izquierda -->

        <!-- Nombre del producto -->

        <!-- Precio del producto -->

        <!-- Categoría del producto -->

        <TextView
            android:id="@+id/tvCategoriaProducto"
            android:layout_width="226dp"
            android:layout_height="23dp"
            android:layout_marginTop="36dp"
            android:text="Categoría"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNombreProducto"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="234dp"
            android:layout_height="29dp"
            android:layout_marginTop="4dp"
            android:text="Nombre del Producto"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPrecioProducto"
            android:layout_width="226dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:text="Precio"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvCategoriaProducto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreProducto"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/borraradmin"
            android:layout_width="65dp"
            android:layout_height="44dp"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.975"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id"
            android:layout_width="23dp"
            android:layout_height="26dp"
            android:text="ID"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>